@model IEnumerable<Hotel20.Models.OrderRoom>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table-container {
        width: 1000px;
        margin: 0 auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ff69b4; /* Pink color border */
            text-align: center;
            padding: 8px;
        }

        .table th {
            background-color: #f2f2f2;
        }

    .action-links a {
        border-radius: 3px;
        background-color: #e82574;
        color: white;
        padding: 5px 10px;
        text-decoration: none;
    }

    .action-links1 a {
        color: #e82574;
        padding: 5px 10px;
        text-decoration: none;
        border-radius: 3px;
        margin-right: 5px;
        margin-bottom: 50px;
    }

    .action-links a:hover {
        background-color: #d1145c;
    }
</style>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameCus)
        </th>



        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.NamePro)
        </th>
        <th>
            Check in
        </th>
        <th>
            Check out
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item != null)
                {
                    @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss") }
                else
                {
                    @:N/A
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCus)
            </td>



            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneCus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.NamePro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutDate)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
}

</table>
