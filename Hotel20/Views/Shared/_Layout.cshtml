<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UI/UX</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Sharp:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="~/Content/styles.css">
</head>
<body>
    @{
        var Admin = Session["TaiKhoan"] as Hotel20.Models.AdminUser;
        string currentController = ViewContext.RouteData.Values["controller"].ToString();
        string currentAction = ViewContext.RouteData.Values["action"].ToString();
    }
    <div class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <h2>C <span class="danger">BABAR</span> </h2>
                </div>
                <div class="close" id="close_btn">
                    <span class="material-symbols-sharp">
                        close
                    </span>
                </div>
            </div>
            <!-- kết thúc phần top -->
            <div class="sidebar" style="height:1000px;">
                <a href="#">
                    @{
                        if (Admin == null)
                        {
                            <a class="nav-link" href="../Users/Login">Đăng nhập Admin</a>
                        }
                        else
                        {
                            <span class="nav-link welcome-message"> @Admin.NameUser</span>
                        }
                    }
                </a>
                <a href="@Url.Action("Index","Categories")" class="@(currentController == "Categories" ? "active" : "")">
                    <span class="material-symbols-sharp">grid_view </span>
                    <h3>Danh mục cate</h3>
                </a>
                <a href="@Url.Action("Index","Products")" class="@(currentController == "Products" ? "active" : "")">
                    <span class="material-symbols-sharp">person_outline </span>
                    <h3>Add Phòng</h3>
                </a>
                <a href="@Url.Action("Index","Customers")">
                    <span class="material-symbols-sharp">mail_outline </span>
                    <h3>Thông tin khách hàng</h3>

                </a>
                <a href="@Url.Action("Index","SerVices")">
                    <span class="material-symbols-sharp">report_gmailerrorred </span>
                    <h3>ADD DỊCH VỤ</h3>
                </a>
                <a href="@Url.Action("Index","DiscountCodes")">
                    <span class="material-symbols-sharp">receipt_long </span>
                    <h3>Discount</h3>
                </a>
                <a href="@Url.Action("Index","OrderRooms")">
                    <span class="material-symbols-sharp">settings </span>
                    <h3>Lịch booking room</h3>
                </a>
                <a href="@Url.Action("Index","BookSerVice")">
                    <span class="material-symbols-sharp">add </span>
                    <h3>Lịch booking service</h3>
                </a>
                <a href="@Url.Action("Index","Quanlies")">
                    <span class="material-symbols-sharp">add </span>
                    <h3>Quan ly don hang lớn</h3>
                </a>
                <a href="@Url.Action("GroupByTop5","TopYeuThich")">
                    <span class="material-symbols-sharp">add </span>
                    <h3>Yêu thích</h3>
                </a>
                <a href="@Url.Action("Index","Thue")">
                    <span class="material-symbols-sharp">add </span>
                    <h3>Quản lí thuế</h3>
                </a>

            </div>
        </aside>
        <div />
        <div>
            @RenderBody()
        </div>
</body>
</html>
