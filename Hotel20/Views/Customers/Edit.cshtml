                    @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4 mb-3">
                    @Html.LabelFor(model => model.TaiKhoan, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control", style = "width: 200px; height: 50px;" } })
                    @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4 mb-3">
                    @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", style = "width: 200px; height: 50px;" } })
                    @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4 mb-3">
                    @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label" })
