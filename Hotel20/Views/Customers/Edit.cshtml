                </div>

                <div class="col-md-4 mb-3">
                    @Html.LabelFor(model => model.DressCus, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.DressCus, new { htmlAttributes = new { @class = "form-control", style = "width: 200px; height: 50px;" } })
                    @Html.ValidationMessageFor(model => model.DressCus, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4 mb-3">
                    @Html.LabelFor(model => model.CityCus, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.CityCus, new { htmlAttributes = new { @class = "form-control", style = "width: 200px; height: 50px;" } })
                    @Html.ValidationMessageFor(model => model.CityCus, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4 mb-3">
                    @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "control-label" })
