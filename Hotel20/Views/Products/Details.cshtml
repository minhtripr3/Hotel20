    <title>@ViewBag.Title</title>


    <style>

        .pd-details-tab {
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 4px;
        }

        .tab-item .nav {
            display: inline-flex;
            justify-content: space-between;
            padding: 0;
            list-style: none;
            border-bottom: 1px solid #ddd;
        }

            .tab-item .nav li {
                margin: 0;
            }

            .tab-item .nav a {
                display: block;
                padding: 10px 20px;
                width: 100%;
                text-align: center;
                text-decoration: none;
                color: #333;
                border: 1px solid #ddd;
                border-bottom: none;
                border-radius: 4px 4px 0 0;
                background-color: #fff;
            }

                .tab-item .nav a.active {
                    background-color: #007bff;
                    color: #fff;
                }

        .tab-item-content {
            border-radius: 0 0 4px 4px;
            background-color: #fff;
        }

        .property-more-table {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

            .property-more-table table {
                width: 48%;
                border-collapse: collapse;
            }

            .property-more-table td {
                padding: 10px;
                border: 1px solid #ddd;
            }

        .property-contactus {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #fff;
            margin-top: 20px;
        }

        .agent-desc img {
            width: 100%;
            border-radius: 4px;
        }

        .agent-desc {
            margin-bottom: 20px;
        }

        .agent-title h5 {
            margin: 10px 0 5px 0;
        }

        .agent-social a {
            margin-right: 10px;
            color: #333;
            text-decoration: none;
        }

            .agent-social a:hover {
                color: #007bff;
            }

        .agent-contact-form input,
        .agent-contact-form textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .agent-contact-form .site-btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            border: none;
        }

        .detail_sp {
            display: flex; /* Sử dụng flexbox để căn chỉnh các phần tử con */
            align-items: flex-start; /* Căn phần tử con theo đỉnh */
        }

        .detail_img {
            flex: 0 0 200px; /* Phần tử này có độ rộng cố định là 200px */
            margin-right: 20px; /* Khoảng cách phải giữa các phần tử */
        }

        .detail_nd {
            flex: 1; /* Phần tử này sẽ mở rộng để lấp đầy phần còn lại */
        }

        .detail_ndct {
            margin-top: 0; /* Loại bỏ khoảng cách trên đầu đoạn văn */
        }

        .detail_soLuong {
            margin-bottom: 10px; /* Khoảng cách dưới cho phần số lượng */
        }

        .btn_product {
            margin-right: 10px; /* Khoảng cách bên phải giữa các nút */
        }

        .info_sanPham {
            display: flex; /* Sử dụng flexbox để các phần tử con ở cùng một hàng */
            border: 1px solid #ccc; /* Viền 1px với màu xám nhạt */
        }

        .ttsp {
            flex: 1; /* Phần tử này sẽ chiếm hết không gian còn lại của flex container */
            text-align: center; /* Căn giữa nội dung của các đoạn văn bản */
            padding: 10px; /* Khoảng cách giữa nội dung và viền */
            margin: 0; /* Loại bỏ margin mặc định */
        }

        .tab-item-content {
            background-color: #f8f9fa;
        }

        .property-more-table {
            display: flex;
            justify-content: space-between;
            gap: 20px;
        }

        .left-table, .right-table {
            width: 400px;
            border-collapse: collapse;
            background-color: #ffffff;
            border: 1px solid #ced4da;
            border-radius: 4px;
        }

            .left-table td, .right-table td {
                color: black;
                padding: 10px;
                border: 1px solid #ced4da;
            }

        .pt-name {
            font-weight: bold;
            color: white;
        }

        .p-value {
            color: #495057;
        }
    </style>
</head>
