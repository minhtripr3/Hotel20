
@{
    ViewBag.Title = "Loginadmin";
    Layout = "~/Views/Shared/Loginadmin.cshtml";
}

<div class="container">
    <div class="myform">
        @using (Html.BeginForm("Loginadmin", "Admin"))
        {
            @Html.ValidationSummary(true)
            <form>
                <h2>Đăng Nhập Admin</h2>
                <input type="text" placeholder="Admin Name" id="name" name="NameUser" required>
                <input type="text" placeholder="Role admin" id="role" name="RoleUser" required>
                <input type="password" placeholder="Password Admin" id="password" name="PasswordUser" required>
                <button type="submit">Đăng nhập</button>
            </form>
        }
    </div>
    <div class="image">
        <img src="~/Images/image.jpg">
    </div>
</div>

