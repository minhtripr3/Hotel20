@model Hotel20.Models.Category
@{
    ViewBag.Title = "Chỉnh Sửa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .custom-card {
        border: 2px solid #ffcccc; /* border màu hồng */
        border-radius: 10px; /* viền cong */
        padding: 20px;
        width: 230%;
        height: 115%;
    }

        .custom-card .card-header {
            margin-bottom: 7px;
        }

        .custom-card .form-group {
            margin-bottom: 20px; /* khoảng cách giữa các field */
        }

        .custom-card label {
            font-size: 18px; /* kích thước font chữ lớn hơn */
            width: 200px; /* chiều rộng của cột label */
            color: #e82574;
        }

        .custom-card .col-md-8 {
            width: 230px; /* chiều rộng của cột input field */
        }

        .custom-card .form-control {
            height: 35px; /* chiều cao của input field */
        }

        .custom-card input[type="submit"] {
            font-size: 18px; /* kích thước font chữ lớn hơn */
        }

        .custom-card .btn-secondary {
            font-size: 18px; /* kích thước font chữ lớn hơn */
        }
</style>
<div class="container" style="margin-top: 50px;">
    <div class="card custom-card">
        <h5 class="card-header text-center" style="font-size:1.5rem">CHỈNH SỬA CATEGORY</h5>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <hr />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">MÃ CATEGORY</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">TÊN CATEGORY</label>
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-offset-2 col-md-10">
                            <input style="background-color: #e82574;height:50px;width:50px;font-size:15px;color:white" type="submit" value="LƯU" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
            <div style="text-align: center; margin-top: 20px;">
                @Html.ActionLink("TRỞ LẠI", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
