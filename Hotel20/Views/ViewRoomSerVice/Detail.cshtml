                    }
                </li>
                <li><a href="@Url.Action("Register","Users")" style="padding: 0.9rem 1.5rem; outline: none;border: none;font-size: 20px;font-weight: 500; border-radius: 5px; cursor: pointer; transition: 0.3s;margin-left:500px;">Đăng kí</a></li>
